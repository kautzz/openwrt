
config wifi-device 'radio0'
	option type 'mac80211'
	option channel '36'
	option hwmode '11a'
	option path 'pci0000:00/0000:00:00.0'
	option htmode 'VHT80'
	option disabled '0'
	option country 'ES'

config wifi-iface 'default_radio0'
	option device 'radio0'
	option network 'lan'
	option mode 'ap'
        option ssid 'c14'
        option encryption 'psk2+ccmp'
        option key 'foo'

config wifi-iface 'mesh0'
       option device 'radio0'
       option ifname 'mesh0'
       option network 'nwi_mesh0'
       option mode 'mesh'
       option mesh_fwding '0'
       option mesh_id '26708'
       option encryption 'psk2+ccmp'
       option key 'bar'

config wifi-device 'radio1'
	option type 'mac80211'
	option channel '1'
	option hwmode '11g'
	option path 'platform/ahb/18100000.wmac'
	option htmode 'HT40'
	option disabled '0'
	option country 'ES'
	option legacy_rates '0'

config wifi-iface 'default_radio1'
	option device 'radio1'
	option network 'lan'
	option mode 'ap'
        option ssid 'c14'
        option encryption 'psk2+ccmp'
        option key 'foo'

config wifi-iface 'mesh1'
       option device 'radio1'
       option ifname 'mesh1'
       option network 'nwi_mesh1'
       option mode 'mesh'
       option mesh_fwding '0'
       option mesh_id '26708'
       option encryption 'psk2+ccmp'
       option key 'bar'
